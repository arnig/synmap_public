@model WebApplication.Models.AlphabetViewModel
@{
    ViewBag.Title = "Participate";
}

<h2>@Model.Alphabet.Description</h2>


<div class="container-fluid" id="">
    <div class="row">
            <div class="col-md-6 col-sm-12">
                <div id="colorPicker">
                    <div class="wheel" id="colorWheelDemo">

                    </div>
                    <script src="~/Scripts/iro.min.js"></script>
                    <script src="~/Scripts/AlphabetSurvey.js"></script>
                </div>
            </div>
        <div class="col-md-6 col-sm-12" id="character">
            <div id="char">
                @foreach(var c in Model.Ascii)
                {
                    <p title="@c" hidden="hidden">&#@c;</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="center">
    <button class="btn-success" id="btnPostResult">Press me!</button>
</div>