@model WebApplication.Models.AccountIndexViewModel
@{
    ViewBag.Title = "Profile";
}

<h2>My profile</h2>

<h3>Account information</h3>
<p>Name</p>
<p>Email</p>
<p>What I eat for breakfast</p>
<p>...</p>
<button class="btn-warning">Edit</button>

<hr />

<h3>My Surveys</h3>
<div id="profileSurveys">
    <a href="@Url.Action("AlphabetSurveys","Account")" class="btn btn-success btn-sm"><p class="glyphicon glyphicon-eye-open"> </p> View surveys</a>
</div>

@if (Model.UserRoles.Contains("Admin"))
{
    <hr />

    <h3>Downloads</h3>
    <div id="downloads">
        <div id="abDownloads">
            <button class="btn btn-success btn-sm" id="btnDownloadAB"><p class="glyphicon glyphicon-download"> </p> Download CSV</button>
        </div>
    </div>
}