@model WebApplication.Models.AccountEditViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="boxTitle">
    <h1>@ViewBag.Title</h1>
</div>
<div class="boxText">
    @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-sm-5">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Name..." })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-5">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email..." })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-5">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Phone number..." })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-5">
                <div class="btn-group pull-right">
                    <input type="submit" value="Save" class="btn btn-default" />
                    <input type="button" value="Cancel" class="btn btn-default" onclick="history.back()" />
                </div>
            </div>
        </div>
    }
</div>